@model Kosta_Task.Models.Dtos.DepartmentRazorDto


<form asp-action="DepartmentDelete">
    @Html.Hidden("DepartmentDto.Id")
    @Html.Hidden("DepartmentDtosList")
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Удалить отдел</h1>

        <hr />
        <div class="row">
            <div class="col-2">
                <label asp-for="DepartmentDto.Name" class="control-label pt-2" style="font-size:20px;">Наименование</label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="DepartmentDto.Name" class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="DepartmentDto.Code" class="control-label pt-2" style="font-size:20px;">Мнемокод</label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="DepartmentDto.Code" class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="DepartmentDto.ParentDepartmentName" class="control-label pt-2" style="font-size:20px;">ID родительского подразделения</label>
            </div>
            <div class="col-10 pb-3">
                <select disabled asp-for="DepartmentDto.ParentDepartmentName" class="form-control">
                    <option selected>@Model.DepartmentDtosList.First().Name</option>
                </select>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="DepartmentIndex" class="btn-primary btn form-control ">Назад к списку</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Удалить" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>

@using Kosta_Task.Models.Dtos;
@model IEnumerable<DepartmentDto>

<br />
<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1>Список предприятий</h1>
		</div>
		@*<div class="col text-end pt-1">
			<a asp-asp-controller="Employee" asp-action="ProductCreate" class="btn btn-outline-primary"><i class="fas fa-plus"></i> Create New Product</a>
		</div>*@
	</div>
	<table class="table">
		<thead>
			<tr>
				<th>
					Id
				</th>
				<th>
					Родительское предприятие
				</th>
				<th>
					Код
				</th>
				<th>
					Имя
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						<a asp-controller="Employee" asp-action="EmployeeIndex" asp-route-departmentId="@item.Id">
							@item.Id.ToString()
						</a>
					</td>
					<td>
						@(item.ParentDepartmentId is null? "-" : item.ParentDepartmentId.ToString())
					</td>
					<td>
						@(item.Code)
					</td>
					<td>
						@(item.Name)
					</td>
					@*<td>
						<a asp-action="ProductEdit" class="btn btn-success" asp-route-productId="@item.ProductId">
							<i class="fas fa-edit"></i>
						</a>
						<a asp-action="ProductDelete" class="btn btn-danger" asp-route-productId="@item.ProductId">
							<i class="fas fa-trash"></i>
						</a>
					</td>*@
				</tr>
			}
		</tbody>
	</table>
</div>

